/* pages/my/my.wxss */
.listBoxContainer:first-child{
  border-top: 1px solid #f2f2f2;
   border-bottom: 1px solid #f2f2f2;
}
.listBoxContainer{
  padding: 0 14px;
  background: #fff;
}
.listBox{
  display: -webkit-flex;
  display: flex;
  height: 86px;
  flex-direction: row;
  flex-wrap: nowrap;
  position: relative; 
  align-items:center;
}
.headImg{
 width: 66px;
 height: 66px; 
 position: absolute;
 top: 50%;
 margin-top:-33px; 
 right: 10px;
}
/* .textBox{
  padding-left: 10px;
} */
.title{
  font-size: 16px;
  color: #101010;
}
.memberNumber{
  font-size: 12px;
  color: #AFAFAF;
  margin-top: 3px;
}
.listBox:after,.listBox1:after{
    content: '';
    display: inline-block;
    width: 8px;
    height: 8px;
    border-top: 1px solid #656565;
    border-right: 1px solid #656565;
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
    position: absolute;
    top: 50%;
    margin-top: -4px;
    right: 0;
}
.listBoxContainer1{
  padding: 10px 14px;
  background: #fff;
  border-bottom: 1px solid #f2f2f2;
}
.listBox1{
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  position: relative; 
  align-items:center;
  font-size: 16px;
  color: #101010;
}
.tips{
    font-size: 16px;
    color: #A2A2A2;
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
}
.maskBox{
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: rgba(0,0,0,0.4);
  position: fixed;
  z-index: 99;
}
.content{
  width: 90%;
  border-radius: 5px;
  background: #fff;
  padding-top: 15px;
  margin: 50px auto 0 auto;
}
.txt{
  text-align: center;
}
.inputBox{
  background: #f2f2f2;
  width: 90%;
  height: 35px;
  margin: 15px auto 0 auto;
  padding: 5px;
}
.controlBox{
  overflow: hidden;
  margin-top: 15px;
  border-top: 1px solid #E5E5E5;
}
.bt{
  float: left;
  width: 50%;
  padding: 10px 0;
  text-align: center;
  font-size: 18px;
  color: #333;
 
}
.bt:last-child{
  float: right;
  width: 49%;
  border-left:1px solid #E5E5E5;
  color: #1178F1
}