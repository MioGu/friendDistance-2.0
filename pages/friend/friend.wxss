page {
	background-color: #fff; 
	height: 100%;
}
.outContainer {
	height: 100%; 
	display: flex;
	flex-direction: column;
}
.scrollContainer {
	flex: 1;
	overflow: auto;
}
.userInfo {
	width: 690rpx;
	height: 176rpx;
	margin: 30rpx auto;
	background-color: rgba(255, 255, 255, 1);
	box-shadow: 0rpx 2rpx 12rpx 0rpx rgba(23, 86, 180, 0.24);
	/* border: 1rpx solid rgba(0, 0, 0, 0.2); */
	position: relative;
	border-radius: 6rpx;
}
.userInfo .top {
	height: 132rpx;
	background-color: #fff;
}
.userInfo .top>image {
	float: left;
	width: 100rpx;
	height: 100rpx;
	margin-top: 16rpx;
	margin-left: 20rpx;
	background-color: aliceblue;
}
.userInfo .top>.rightContent {
	padding-top: 10rpx;
	margin-left: 140rpx;
}
.userInfo .top>.rightContent >view:nth-of-type(1) {
	font-size: 34rpx;
	color: #333;
	font-family: "PingFangSC-Medium";
}
.userInfo .top>.rightContent >view:nth-of-type(2) {
	font-size: 24rpx;
	color: #999;
	font-family: "PingFangSC-Medium";
}
.userInfo .top>.rightContent >view:nth-of-type(3) {
	font-size: 24rpx;
	color: #999;
	font-family: "PingFangSC-Medium";
}
.userInfo .bottom {
	height: 44rpx;
	line-height: 44rpx;
	background-color: #F3F3F3;
	font-size: 24rpx;
	color: #999;
	font-family: "PingFangSC-Medium";
	position: absolute;
	bottom: 0rpx;
	left: 0rpx;
	width: 100%;
}
.userInfo .bottom >text {
	display: inline-block;
	text-align: center;
	min-width: 146rpx;
}
.userInfo .bottom >text:nth-of-type(1) {
	/* margin-left: 40rpx;
	margin-right: 40rpx; */
}
.userInfo .bottom >text:nth-of-type(2) {
	text-align: left;
}
.userInfo .options {
	position: absolute;
	right: 30rpx;
