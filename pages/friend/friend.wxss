.fix_box{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.5);
}
.fix-content{
  width: 100%;
  height: auto;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #fff;
}
.fix-title{
  padding: 12px 0;
  text-align: center;
  color: #1178F1;
  font-size: 18px;
  position: relative;
  background: #F5F5F5;
}
.close {
   width: 16px;
   height: 16px;
    top:50%;
    margin-top: -8px;
    left: 50%;
    margin-left: -8px;
    position: absolute;
}
.fix-list-box{
  padding: 12px 15px;
  position: relative;
  color: #666;
  font-size: 18px;
  box-shadow: inset 0 -1px 0 0 #DDDDDD;
}
.fix-list-tips{
    font-size: 12px;
    color: #AFAFAF;
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
}
.fix-list-box view:first-child{
 display: inline-block;
 width: 35%;
}
.fix-list-tips1{
    font-size: 18px;
    color: #2C2D2E;
    display: inline-block;
    width: 65%;
}
