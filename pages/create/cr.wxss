
.top{
   /*  background: url('../../imgs/bg.jpg'); */
    padding: 10px 0;
    overflow: hidden;
    position: relative;
    height: 120px;
}
.bg{
  position: absolute;
  left:0;
  width: 100%;
  height: 100%;
  top: 0;
  z-index: -1;
}
.topTitle{
    width: 100%;
    text-align: center;
    font-size: 18px;
    margin-top: 20px;
    color: #fff;
    position: relative;
}
.topNumber{
    font-size: 18px;
    color: #fff;
    margin: 0 auto;
    margin-top:8px;
    padding-top: 8px;
    border-top: 1px solid #fff;
    text-align: center;
    max-width: 50px;
}
.inputBox{
  width: 85%;
  display: block;
  margin: 30px auto 0 auto;
  border:1px solid #ccc;
  padding: 5px 5px;
  background: #fff;
}
.share-btn{
  background: #1178F1;
  border: 2px solid #1178F1;
  border-radius: 5px;
  width: 170px;
  color: #fff;
  margin-top: 50px;
}
