/* pages/home/home.wxss */
.bgImg {
	width: 100%;
	height: 250rpx;
	background-image: url("https://lg-k2nk6t1g-1257138615.cos.ap-shanghai.myqcloud.com/bg-deep.png");
	background-repeat: no-repeat;
	background-size: 100%;
	text-align: center;
	line-height: 1;
	position: relative;
}
.bgImg > image {
	margin-top: 30rpx;
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
}
.bgImg > view.login {
	font-size: 36rpx;
	font-family: "PingFangSC-Medium";
	color: #fff;
	margin-top: 23rpx;
}
.bgImg > view.filterBtn {
	position: absolute;
	left: 53rpx;
	bottom: 30rpx;
	text-align: center;
	color: #fff;
	font-family: "PingFangSC-Regular";
	font-size: 32rpx;
}
.bgImg > view.filterBtn > image {
	width: 74rpx;
	height: 42rpx;
	margin-bottom: 7rpx;
}
.bgImg > view.inviteBtn {
	position: absolute;
	right: 58rpx;
	bottom: 30rpx;
	text-align: center;
	color: #fff;
	font-family: "PingFangSC-Regular";
	font-size: 32rpx;
}
.bgImg > view.inviteBtn > image {
	width: 58rpx;
	height: 58rpx;
	margin-bottom: 7rpx;
}
.mainContainer {
	min-height: 667rpx;
	border: 1rpx solid transparent;
	box-sizing: border-box;
}
.mainContainer > .login {
	width: 400rpx;
	height: 70rpx;
	line-height: 70rpx;
	text-align: center;
	color: #fff;
	background-color: #424CF7;
	font-family: "PingFangSC-Regular";
	font-size: 28rpx;
	border-radius: 8rpx;
	margin-top: 250rpx;
}
.mainContainer > .noLocation {
	margin-top: 245rpx;
	text-align: center;
}
.mainContainer > .noLocation >view:nth-of-type(1) {
	font-family: "PingFangSC-Regular";
	font-size: 32rpx;
	color: #999;
}
.mainContainer > .noLocation >view:nth-of-type(2) {
	font-family: "PingFangSC-Regular";
	font-size: 32rpx;
	color: #424CF7;
	text-decoration: underline;
}
.mainContainer > .showLocation {
	margin-top: 245rpx;
	text-align: center;
	font-size: 32rpx;
	font-family: "PingFangSC-Regular";
	color: #999;
}
.mainContainer > .showLocation >view:nth-of-type(2) {
	color: #333;
}
.mainContainer > .tips {
	margin-top: 117rpx;
	text-align: center;
	font-family: "PingFangSC-Regular";
	font-size: 32rpx;
	color: #999;
}
.mainContainer > .tips text {
	color: #424CF7;
}
.mainContainer .dataList .item{
	width: 690rpx;
	height: 132rpx;
	margin: 0 auto;
	background-color: #fff;
	border-radius: 4rpx;
	box-shadow: 0rpx 2rpx 12rpx 0rpx rgba(23, 86, 180, 0.24); 
	border: 1rpx solid transparent; 
	margin-top: 20rpx;
}
.mainContainer .dataList .item >image {
	width: 100rpx;
	height: 100rpx;
	float: left;
	margin-top: 16rpx;
	margin-left: 20rpx;
}
.mainContainer .dataList .item >.rightContent {
	margin-left: 140rpx;
	margin-top: 20rpx;
}
.mainContainer .dataList .item >.rightContent >view:nth-of-type(1) {
	font-size: 34rpx;
	color: #333;
	font-family: "PingFangSC-Medium";
}
.mainContainer .dataList .item >.rightContent >view:nth-of-type(2) {
	font-size: 28rpx;
	color: #999;
	font-family: "PingFangSC-Medium";
	margin-top: 4rpx;
}
.adContainer {
	width: 690rpx;
	height: 230rpx;
	margin: 0 auto;
	background-color: #979797;
}