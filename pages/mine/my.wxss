/* pages/my/my.wxss */
.listBoxContainer:first-child{
  border-top: 1px solid #f2f2f2;
   border-bottom: 1px solid #f2f2f2;
}
.listBoxContainer{
  padding: 10px 14px;
  background: #fff;
}
.listBox{
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  position: relative; 
  align-items:center;
}
.headImg{
 width: 66px;
 height: 66px; 
}
.textBox{
  padding-left: 10px;
}
.title{
  font-size: 16px;
  color: #101010;
  font-weight: bolder;
}
.memberNumber{
  font-size: 12px;
  color: #AFAFAF;
  margin-top: 3px;
}
.listBox:after{
    content: '';
    display: inline-block;
    width: 8px;
    height: 8px;
    border-top: 1px solid #656565;
    border-right: 1px solid #656565;
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
    position: absolute;
    top: 50%;
    margin-top: -4px;
    right: 0;
}
.tips{
    font-size: 12px;
    color: #AFAFAF;
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
}
.share-btn{
  background: #1178F1;
  border: 2px solid #1178F1;
  border-radius: 5px;
  width: 170px;
  color: #fff;
  margin-top: 30px;
}
